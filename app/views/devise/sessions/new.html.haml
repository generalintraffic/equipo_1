.margin-sesion.well
  .row
    .col-md-6.col-md-offset-3.text-center.login
      %p
        %h1 Iniciar Sesion

  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %div
      .field
        = f.label :email, "Correo Electronico"
        %br/
        = f.email_field :email, autofocus: true, class: "form-control" ,placeholder:"example@mail.com"
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "off",  class: "form-control" , placeholder:"*******"
      - if devise_mapping.rememberable?
        .field.form-group
          = f.check_box :remember_me
          = f.label :remember_me
      .actions.form-group
        = f.submit "Iniciar sesion",class: "btn btn-success"
    = render "devise/shared/links"

